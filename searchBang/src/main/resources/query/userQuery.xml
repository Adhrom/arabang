<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="user">

	<insert id="insertUser" parameterType="com.mainWeb.searchBang.user.model.UserVO">
		INSERT INTO MEMBER_REG 
		values(#{MEMBEREMAIL}, #{MEMBERPW}, #{MEMBERNICKNAME},#{MEMBERPHONE})
	</insert>
	
	<select id="getUserInfo" parameterType="java.util.Map" resultType="com.mainWeb.searchBang.user.model.UserVO">
		SELECT * FROM MEMBER_REG
		WHERE MEMBEREMAIL = #{id} AND MEMBERPW = #{password}
	</select>
	
	<delete id="deleteUserInfo" parameterType="java.util.Map">
		DELETE FROM MEMBER_REG
		WHERE MEMBEREMAIL = #{id} AND MEMBERPW = #{password}
	</delete>
	
	
</mapper>